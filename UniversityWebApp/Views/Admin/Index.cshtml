@{
    ViewBag.Title = "Home Page";
}

<div class="border border-light d-flex flex-column justify-content-center align-items-center p-5 m-5 bg-light">
    <div class="m-2 p-2">
        <p class="text-center">Student Management</p>
        <a class="btn-primary rounded text-decoration-none p-3" asp-controller="Admin" asp-action="RegisterStudent">Register Student</a>
        <a class="btn-primary rounded text-decoration-none p-3" asp-controller="Admin" asp-action="ManageStudents">Manage Students</a>
    </div>
    <div class="m-2 p-2">
        <p class="text-center">Course Management</p>
        <a class="btn-primary rounded text-decoration-none p-3" asp-controller="Admin" asp-action="ManageCourses">Manage Courses</a>
    </div>
    <div class="m-2 p-2">
        <p class="text-center">Teacher Management</p>
        <a class="btn-primary rounded text-decoration-none p-3" asp-controller="Admin" asp-action="RegisterTeacher">Register Teacher</a>
    </div>
</div>
