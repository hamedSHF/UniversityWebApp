@model List<UniversityWebApp.ViewModels.StudentViewModel>
@{

}
<!DOCTYPE html>
<div class="container">
    <div class="table">
        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Birth Date</th>
                <th scope="col">Register Date</th>
                <th scope="col">Gender</th>
                <th scope="col">Education State</th>
                <th scope="col">Courses</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var student in Model)
    {
        <tr>
            <th scope="row">@student.StudentUserName</th>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.BirthDateString</td>
            <td>@student.RegisterDateString</td>
            <td>@student.Gender</td>
            <td>@student.EducationStateString</td>
            <td>
                <ul>
                    @foreach(var course in student.Courses)
                    {
                        <li>@course.CourseName</li>
                    }
                </ul>
           </td>
        </tr>
    }
    </tbody>
    </div>
</div>
