@model IdentityServer.Models.LoginRequestBody
@{
    ViewData["title"] = "Login";
}

<div class="m-5 justify-content-center align-content-center text-center fw-bold border rounded bg-white">
    This is student login page
</div>

<div class="m-5 border rounded p-2 bg-light d-flex justify-content-center align-items-center">
    <form asp-action="Login" class="p-3" method="post" id="loginForm">
        <div class="form-group m-3">
            <label asp-for="UserName" class="form-label">UserName</label>
            <input asp-for="UserName" type="text" class="form-control" /> 
        </div>
        <div class="form-group m-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div class="form-check m-3">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input"/>
            <label asp-for="Password" class="form-check-label">Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary m-3">Submit</button>
    </form>
</div>